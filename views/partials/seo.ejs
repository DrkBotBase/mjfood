<%
  let nombreFinal = (locals.config && config.nombre) || (locals.info && info.name_page) || 'MJ Food';
  let esRestaurante = (locals.config && config.extension);
%>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "<%= esRestaurante ? 'Restaurant' : 'WebSite' %>",
  "name": "<%= nombreFinal %>",
  "image": "https://mjfood.top<%= locals.config && config.logoUrl || '/assets/banner.png' %>",
  "url": "https://mjfood.top/<%= esRestaurante || '' %>",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "<%= locals.config && config.direccion || 'WebSite' %>",
    "addressCountry": "CO"
  },
  "menu": "https://mjfood.top/<%= esRestaurante || ''  %>",
  "publisher": {
    "@type": "Organization",
    "name": "MJ Food",
    "logo": "https://mjfood.top/assets/banner.png"
  }
}
</script>